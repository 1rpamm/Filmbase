!!! 5
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %title= content_for?(:title) ? yield(:title) : "Filmbase"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    / Le styles
    = stylesheet_link_tag    "application"

    / Le fav and touch icons
    / %link{:href => "images/favicon.ico", :rel => "shortcut icon"}/
    / %link{:href => "images/apple-touch-icon.png", :rel => "apple-touch-icon"}/
    / %link{:href => "images/apple-touch-icon-72x72.png", :rel => "apple-touch-icon", :sizes => "72x72"}/
    / %link{:href => "images/apple-touch-icon-114x114.png", :rel => "apple-touch-icon", :sizes => "114x114"}/


  %body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
            %span.i-bar
            %span.i-bar
            %span.i-bar
          =link_to "Видеокаталог",root_path, class: 'brand'
          .container.nav-collapse
            %ul.nav
              %li{class: controller_name=='films' ? 'active' : nil}= link_to "Фильмы",films_path
              %li{class: controller_name=='people' ? 'active' : nil}= link_to "Персоны", people_path
              -if admin?
                %li{class: controller_name=='genres' ? 'active' : nil}=link_to "Жанры",genres_path
                %li{class: controller_name=='countries' ? 'active' : nil}=link_to "Страны",countries_path

            %ul.nav.pull-right
              -if logged_in?
                %li
                  .name=current_user.name
                %li.divider-vertical
                %li=link_to "Выход",logout_path
              -else
                %li=link_to "Вход", new_session_path
    .container

      .content
        .row
          .span9
            =render 'layouts/notices'
            = yield
          .span1 &nbsp;
          .span3
            .well.sidebar-nav
              %ul.nav.nav-list
                %li.nav-header Жанры
                -Genre.all.each do |genre|
                  %li{class: @film && @film.genre==genre ? 'active' : nil}
                    =link_to genre.name,genre
    
      %footer
        %p
          &copy;
          =copyright_years
    /
      Le javascript
      \==================================================
    / Placed at the end of the document so the pages load faster
    = javascript_include_tag "application"
